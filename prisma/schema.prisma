generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  decks    Deck[]
  createdAt DateTime @default(now())
  sessions Session[]
}

model Deck {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  commanderId String?
  commander DeckCard? @relation("CommanderCard", fields: [commanderId], references: [id])
  cards     DeckCard[]
}

model DeckCard {
  id       String   @id @default(uuid())
  deck     Deck     @relation(fields: [deckId], references: [id], onDelete: Cascade)
  deckId   String
  cardName String
  image_uris Json
  typeLine String
  cmc      Float
  colors String[]
  colorIdentity String[]
  commanderOf Deck[] @relation("CommanderCard")
}
model PasswordReset {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
}
model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}


